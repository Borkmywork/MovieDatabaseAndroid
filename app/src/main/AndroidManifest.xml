<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jack.moviedatabaseandroid" >

    <uses-permission android:name = "android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FindActorActivity"
            android:label="@string/title_activity_search_actor">
        </activity>
        <activity
            android:name=".SearchProducerActivity"
            android:label="@string/title_activity_search_producer">
        </activity>
        <activity
            android:name=".FindDirectorActivity"
            android:label="@string/title_activity_find_director" >
        </activity>
        <activity
            android:name=".MovieGame"
            android:label="@string/title_activity_play_game" >
        </activity>
        <activity
            android:name=".MultipleActors"
            android:label="@string/title_activity_multiple_actors" >
        </activity>
    </application>

</manifest>
