<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bacon_beige" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Search By Producer"
        android:id="@+id/txtProducerTitle"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/bacon_dark"/>

    <AutoCompleteTextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapWords|textPersonName"
        android:ems="10"
        android:id="@+id/editTxtProducerName"
        android:layout_gravity="center_horizontal"
        android:hint="Name"
        android:completionThreshold="1"
        android:singleLine="true"
        android:textColor="@color/bacon_dark" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/bacon_blue"
        android:text="Search"
        android:id="@+id/btnProducerSearch"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarProducer"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listProducerResults"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible" />

</LinearLayout>